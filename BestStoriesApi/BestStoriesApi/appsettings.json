{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "RateLimiting": {
    "PolicyName": "best-stories",
    "PermitLimit": 1000,
    "WindowMinutes": 5,
    "QueueLimit": 0
  },
  "HackerNews": {
    "BaseUrl": "https://hacker-news.firebaseio.com/v0/",
    "TimeoutSeconds": 10,
    "ItemCacheMinutes": 5,
    "MaxConcurrentRequests": 10,
    "Retry": {
      "MaxRetries": 3,
      "BaseDelayMs": 200,
      "UseExponentialBackoff": true,
      "UseJitter": true,
      "RetryOnTimeout": true,
      "RetryOn429": true,
      "RetryOn5xx": true
    }
  }
}
